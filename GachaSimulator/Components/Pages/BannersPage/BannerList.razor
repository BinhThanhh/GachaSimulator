@page "/banners"
@rendermode InteractiveServer
@using GachaSimulator.Models
@using GachaSimulator.Services
@inject GachaService GachaService
@inject NavigationManager NavManager

<div class="inventory-bg">
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
        <div class="d-flex justify-space-between align-center mb-4 px-3">
            <div>
                <MudText Typo="Typo.h4" Color="Color.Primary" Style="font-weight:bold;">Quản Lý Sự Kiện</MudText>
                <MudText Typo="Typo.body1" Color="Color.Secondary">Danh sách các Banner Gacha</MudText>
            </div>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
                       Href="/add-banner" Class="rounded-pill">
                Tạo Banner Mới
            </MudButton>
            <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit"
                           OnClick="@(() => NavManager.NavigateTo("/"))"
                           Style="background: rgba(0,0,0,0.5); border: 1px solid #fff;" />
        </div>

        @if (banners == null)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        }
        else
        {
            <MudGrid>
                @foreach (var banner in banners)
                {
                    <MudItem xs="12" md="6">
                        <MudCard Elevation="3" Class="hover-effect" @onclick="() => EditBanner(banner.Id)">
                            <MudCardMedia Image="@banner.ImageUrl" Height="200" />

                            <MudCardContent>
                                <div class="d-flex justify-space-between align-center">
                                    <MudText Typo="Typo.h6">@ParseUnityText(banner.Name)</MudText>
                                </div>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>
        }
    </MudContainer>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s;
        cursor: pointer;
    }

        .hover-effect:hover {
            transform: scale(1.02);
            border: 2px solid var(--mud-palette-primary);
        }
</style>

@code {
    private List<Banner>? banners;

    protected override async Task OnInitializedAsync()
    {
        banners = await GachaService.GetBannersAsync();
    }

    private void EditBanner(int id)
    {
        NavManager.NavigateTo($"/edit-banner/{id}");
    }

    // Hàm xử lý text màu (nếu bạn dùng rich text Unity)
    private MarkupString ParseUnityText(string text)
    {
        if (string.IsNullOrEmpty(text)) return new MarkupString("");
        string html = System.Text.RegularExpressions.Regex.Replace(text, @"<color=(.*?)>", "<span style=\"color:$1\">");
        return new MarkupString(html.Replace("</color>", "</span>"));
    }
}